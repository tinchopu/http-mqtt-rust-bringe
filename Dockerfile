# Build stage
FROM rust:1.91-slim AS builder

WORKDIR /app

# Install dependencies for building
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy manifests
COPY Cargo.toml ./

# Copy source code
COPY src ./src

# Build the application
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/target/release/garage-mqtt-bridge /app/garage-mqtt-bridge

# Create directory for certificates
RUN mkdir -p /certs

# Expose HTTP port
EXPOSE 8080

# Run the application
CMD ["/app/garage-mqtt-bridge"]
